---
import Logo from "@components/Logo.astro";
import SideNav from "@components/SideNav.astro";
import TopNav from "@components/TopNav.astro";
import Layout from "@layouts/Layout.astro";
import { SEO } from "astro-seo";
import { getEntry } from "astro:content";

const { data, render } = await getEntry("index-page", "index");

const { Content } = await render();
---

<Layout title="Welcome to Astro.">
  <SEO slot="head" title={data.seo.title} description={data.seo.description} />

  <TopNav />

  <main
    grow
    text="center secondary-blue"
    bg-primary
    block
    flex="~ col"
    items-center
    justify-evenly
    gap-12
    py-12
    px-4
    overflow-y-auto
  >
    <p max-w-100 w-90% -translate-x-2>
      <Logo />
    </p>

    <h1 hidden>
      {data.seo.title}
    </h1>

    <h2 text-7 font-display>{data.headline}</h2>

    <div>
      <Content />
    </div>
  </main>
</Layout>

<SideNav
  showPresentationLink
  showMenuLink
  showDayMenuLink
  showProgramationLink
  showContactLink
/>

<style>
  main :global(*::selection) {
    background-color: var(--secondary-blue);
    color: var(--primary);
  }
</style>
