---
import { SEO } from "astro-seo";
import { WEBSITE_URL } from "@lib/constants.js";

export interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<SEO
  slot="head"
  {title}
  {description}
  openGraph={{
    basic: {
      title,
      type: "website",
      image: `${WEBSITE_URL}/opengraph-image.png`,
    },
  }}
/>
